#!/bin/bash

set -e

FIRST_RUN_MODE=~/.local/state/omarchy/first-run.mode

if [[ -f "$FIRST_RUN_MODE" ]]; then
  rm -f "$FIRST_RUN_MODE"

  bash "$OMARCHY_PATH/install/first-run/battery-monitor.sh"
  bash "$OMARCHY_PATH/install/first-run/firewall.sh"
  bash "$OMARCHY_PATH/install/first-run/gnome-theme.sh"

  # Run all custom first-run scripts
  export CUSTOM_PATH="$OMARCHY_PATH/install/custom"
  export CUSTOM_LOGS="$CUSTOM_PATH/first-run.log"
  echo "----------------------------------------------" >> $CUSTOM_LOGS
  echo "Contents of /etc/ufw/applications.d/ufw-sunshine:" >> $CUSTOM_LOGS
  cat /etc/ufw/applications.d/ufw-sunshine >> $CUSTOM_LOGS 2>&1
  sudo ufw app list >> $CUSTOM_LOGS 2>&1
  echo "----------------------------------------------" >> $CUSTOM_LOGS
  echo "Running custom first-run scripts..." >> $CUSTOM_LOGS
  echo "----------------------------------------------" >> $CUSTOM_LOGS
  bash "$OMARCHY_PATH/install/custom/first-run.sh"
  echo "----------------------------------------------" >> $CUSTOM_LOGS
  echo "Finished custom first-run scripts..." >> $CUSTOM_LOGS
  sudo ufw status verbose >> $CUSTOM_LOGS 2>&1
  echo "----------------------------------------------" >> $CUSTOM_LOGS

  sudo rm -f /etc/sudoers.d/first-run

  bash "$OMARCHY_PATH/install/first-run/wifi.sh"
  bash "$OMARCHY_PATH/install/first-run/welcome.sh"
fi
